# ======= URL REWRITING =======

# Turn on the rewrite engine
RewriteEngine On

# 1. Redirect direct .php requests to the clean URL (prevents duplicate content)
RewriteCond %{THE_REQUEST} \s/([^/]+)\.php[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

RewriteCond %{THE_REQUEST} \s/admin/([^/]+)\.php[\s?] [NC]
RewriteRule ^ admin/%1 [R=301,L]
RewriteCond %{THE_REQUEST} \s/instructor/([^/]+)\.php[\s?] [NC]
RewriteRule ^ instructor/%1 [R=301,L]

# 2. Specific rules for admin pages (based on your sidebar navigation)
RewriteRule ^admin/dashboard/?$ admin/dashboard.php [NC,L]
RewriteRule ^admin/department/?$ admin/department.php [NC,L]
RewriteRule ^admin/room/?$ admin/room.php [NC,L]
RewriteRule ^admin/role/?$ admin/role.php [NC,L]
RewriteRule ^admin/personell/?$ admin/personell.php [NC,L]
RewriteRule ^admin/personell_logs/?$ admin/personell_logs.php [NC,L]
RewriteRule ^admin/visitor/?$ admin/visitor.php [NC,L]
RewriteRule ^admin/visitor_logs/?$ admin/visitor_logs.php [NC,L]
RewriteRule ^admin/students/?$ admin/students.php [NC,L]
RewriteRule ^admin/instructors/?$ admin/instructors.php [NC,L]
RewriteRule ^admin/instructor_accounts/?$ admin/instructor_accounts.php [NC,L]
RewriteRule ^admin/manage_subjects/?$ admin/manage_subjects.php [NC,L]
RewriteRule ^admin/dtr/?$ admin/dtr.php [NC,L]
RewriteRule ^admin/student_logs/?$ admin/student_logs.php [NC,L]
RewriteRule ^admin/attendance_log/?$ admin/attendance_log.php [NC,L]
RewriteRule ^admin/room_schedule/?$ admin/room_schedule.php [NC,L]
RewriteRule ^admin/settings/?$ admin/settings.php [NC,L]
RewriteRule ^instructor/dashboard/?$ instructor/dashboard.php [NC,L]
RewriteRule ^instructor/attendance/?$ instructor/attendance.php [NC,L]
RewriteRule ^instructor/index/?$ instructor/index.php [NC,L]
RewriteRule ^instructor/forgot_password/?$ instructor/forgot_password.php [NC,L]
RewriteRule ^instructor/schedule/?$ instructor/schedule.php [NC,L]

# 3. Redirect requests for index.php to the root
RewriteRule ^index\.php$ / [R=301,L]

# 4. Internally rewrite clean URLs to the .php file
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)$ $1.php [L]

# 5. Handle admin subdirectory clean URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^admin/([^/]+)$ admin/$1.php [L]

# ======= STRICT DIRECT PATH BLOCKING =======

# Block ALL direct directory access EXCEPT admin and instructor root
RewriteRule ^(assets|backups|rfidgpms-main|uploads)/?$ - [F,L]

# Block ALL direct PHP file access (force clean URLs)
RewriteCond %{THE_REQUEST} \s/+(.*?)\.php[\s?] [NC]
RewriteCond %{REQUEST_URI} !^/index\.php [NC]
RewriteRule ^ - [F,L]

# Block direct access to files in protected directories (but allow directory access)
RewriteRule ^(admin|instructor)/(.+)\.(php|html|htm|txt|json|xml)$ - [F,L]

# Block ALL image hotlinking with strict referer checking
RewriteCond %{REQUEST_URI} \.(png|jpg|jpeg|gif|webp|bmp|svg|ico)$ [NC]
RewriteCond %{HTTP_REFERER} !^https://rfid-gpms\.com/ [NC]
RewriteCond %{HTTP_REFERER} !^$
RewriteRule .* - [F,L]

# Block uploads directory completely
RewriteRule ^(admin|instructor)/uploads/ - [F,L]

# Block files with instructor_ prefix
RewriteRule .*instructor_.* - [F,L]

# Block any file in instructor uploads path
RewriteRule ^admin/uploads/instructor/.* - [F,L]

# ======= SECURITY PROTECTION =======

# Block common attacks in query string
RewriteCond %{QUERY_STRING} (eval\() [NC,OR]
RewriteCond %{QUERY_STRING} (base64_encode) [NC,OR]
RewriteCond %{QUERY_STRING} (javascript:) [NC,OR]
RewriteCond %{QUERY_STRING} (<script) [NC,OR]
RewriteCond %{QUERY_STRING} (document\.cookie) [NC]
RewriteRule ^(.*)$ - [F,L]

# Block SQL injections in query string
RewriteCond %{QUERY_STRING} (union.*select) [NC,OR]
RewriteCond %{QUERY_STRING} (insert.*into) [NC,OR]
RewriteCond %{QUERY_STRING} (drop.*table) [NC,OR]
RewriteCond %{QUERY_STRING} (update.*set) [NC]
RewriteRule ^(.*)$ - [F,L]

# Block file inclusion attacks in query string
RewriteCond %{QUERY_STRING} (\.\./|\.\.\\|\.\.%2f|\.\.%5c) [NC]
RewriteRule ^(.*)$ - [F,L]

# ======= SECURITY HEADERS =======

# Enable HSTS Header (uncomment if you have a valid SSL certificate)
# Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"

# Additional Security Headers
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()"

# Remove server identification headers
Header unset X-Powered-By
Header always unset Server

# Disable server signature
ServerSignature Off

# ======= FILE PROTECTION =======

# Protect sensitive files
<Files "recaptcha.php">
    Order Allow,Deny
    Deny from all
</Files>

<FilesMatch "\.(env|log|ini|conf|sql|bak|config|fla|psd|sh|inc|swp|dist|htaccess)$">
    Deny from all
</FilesMatch>

<FilesMatch "^\.">
    Deny from all
</FilesMatch>

# Protect admin directory
<FilesMatch "\.(php)$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Allow from all
    </IfModule>
</FilesMatch>

# ======= SERVER HARDENING =======

# Disable directory listing
Options -Indexes

# Disable ETags to prevent file enumeration
FileETag None
Header unset ETag

# Disable TRACE and TRACK methods to prevent XST attacks
RewriteCond %{REQUEST_METHOD} ^(TRACE|TRACK)
RewriteRule .* - [F]

# Prevent access to version control directories
RewriteRule ^(\.git|\.svn|\.hg|\.bzr) - [F,L]

# Block access to backup and source files
<FilesMatch "(\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist)|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# Cache control for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Block access to sensitive directories
RewriteRule ^(includes|config|logs|temp)/ - [F,L]

# Specific folder protections (EXCLUDING admin and instructor roots)
RewriteRule ^assets/?$ - [F,L]
RewriteRule ^backups/?$ - [F,L]
RewriteRule ^rfidgms-main/?$ - [F,L]
RewriteRule ^uploads/?$ - [F,L]

# Block directory listing globally
IndexIgnore *
# ======= MEDIUM RISK VULNERABILITY FIXES =======

# 1. SECURE COOKIE SETTINGS (HttpOnly, Secure flags)
<IfModule mod_headers.c>
    # Secure existing cookies by adding HttpOnly and Secure flags via headers
    Header always edit Set-Cookie "(.*)" "$1; HttpOnly; Secure"
    
    # Prevent client-side JavaScript cookie access
    Header always set Cross-Origin-Opener-Policy "same-origin"
    Header always set Cross-Origin-Embedder-Policy "require-corp"
</IfModule>

# 2. BOOTSTRAP 3.3.7 VULNERABILITY MITIGATION
# Content Security Policy to prevent XSS attacks
<IfModule mod_headers.c>
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://maxcdn.bootstrapcdn.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://maxcdn.bootstrapcdn.com; img-src 'self' data: https:; font-src 'self' https://cdnjs.cloudflare.com https://maxcdn.bootstrapcdn.com; connect-src 'self'; frame-ancestors 'self'; form-action 'self'; base-uri 'self'"
    
    # Additional XSS protection headers
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# 3. ENHANCED SESSION SECURITY
<IfModule mod_headers.c>
    # Prevent MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Enable XSS filtering
    Header always set X-XSS-Protection "1; mode=block"
    
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Control resource loading
    Header always set Cross-Origin-Resource-Policy "same-origin"
</IfModule>

# 4. STRICT TRANSPORT SECURITY (HSTS)
<IfModule mod_headers.c>
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>


# 14. ENHANCED UPLOAD PROTECTION
<FilesMatch "\.(php|phtml|php3|php4|php5|phar|inc)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# 15. CROSS-ORIGIN PROTECTION
<IfModule mod_headers.c>
    Header always set Cross-Origin-Opener-Policy "same-origin"
    Header always set Cross-Origin-Embedder-Policy "require-corp"
    Header always set Cross-Origin-Resource-Policy "same-origin"
</IfModule>