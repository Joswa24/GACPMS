RewriteEngine On

# ======= URL REWRITING =======

# Redirect direct .php requests to clean URLs
RewriteCond %{THE_REQUEST} \s/([^/]+)\.php[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

RewriteCond %{THE_REQUEST} \s/admin/([^/]+)\.php[\s?] [NC]
RewriteRule ^ admin/%1 [R=301,L]

RewriteCond %{THE_REQUEST} \s/instructor/([^/]+)\.php[\s?] [NC]
RewriteRule ^ instructor/%1 [R=301,L]

# Redirect index.php to root
RewriteRule ^index\.php$ / [R=301,L]

# Hide .php extensions for main directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)$ $1.php [L]

# Hide .php extensions for admin directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^admin/([^/]+)$ admin/$1.php [L]

# Hide .php extensions for instructor directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^instructor/([^/]+)$ instructor/$1.php [L]

# ======= SECURITY HEADERS =======

# Enable HSTS Header
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"

# Additional Security Headers
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# ======= CRUD-FRIENDLY SECURITY =======

# ONLY apply security rules to GET requests - allow all POST/PUT/DELETE for CRUD
RewriteCond %{REQUEST_METHOD} GET

# Block common attacks in URL parameters (GET only)
RewriteCond %{QUERY_STRING} (eval\() [NC,OR]
RewriteCond %{QUERY_STRING} (base64_encode) [NC,OR]
RewriteCond %{QUERY_STRING} (javascript:) [NC,OR]
RewriteCond %{QUERY_STRING} (<script) [NC,OR]
RewriteCond %{QUERY_STRING} (document\.cookie) [NC]
RewriteRule ^(.*)$ - [F,L]

# Block SQL injections in URL parameters (GET only)
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (union.*select) [NC,OR]
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (insert.*into) [NC,OR]
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (drop.*table) [NC,OR]
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (update.*set) [NC]
RewriteRule ^(.*)$ - [F,L]

# Block file inclusion attacks in URL parameters (GET only)
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (\.\./|\.\.\\|\.\.%2f|\.\.%5c) [NC]
RewriteRule ^(.*)$ - [F,L]

# ======= DIRECTORY PROTECTION =======

# Block sensitive directories
RewriteRule ^(includes|config|logs|temp|backups|rfidgpms-main)/ - [F,L]

# Block uploads directory access
RewriteRule ^(admin|instructor)/uploads/ - [F,L]

# Block files with instructor_ prefix
RewriteRule .*instructor_.* - [F,L]

# Block any file in instructor uploads path
RewriteRule ^admin/uploads/instructor/.* - [F,L]

# ======= IMAGE HOTLINKING PROTECTION =======
RewriteCond %{REQUEST_URI} \.(png|jpg|jpeg|gif|webp|bmp|svg|ico)$ [NC]
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?rfid-gpms\.com/ [NC]
RewriteRule .* - [F,L]

# ======= SERVER HARDENING =======

# Disable server signature
ServerSignature Off

# Disable directory listing
Options -Indexes

# Disable ETags
FileETag None
Header unset ETag

# Disable TRACE and TRACK methods
RewriteCond %{REQUEST_METHOD} ^(TRACE|TRACK)
RewriteRule .* - [F]

# Block version control directories
RewriteRule ^(\.git|\.svn|\.hg|\.bzr) - [F,L]

# ======= FILE PROTECTION =======

# Protect sensitive files
<Files "recaptcha.php">
    Order Allow,Deny
    Deny from all
</Files>

<FilesMatch "\.(env|log|ini|conf|sql)$">
    Deny from all
</FilesMatch>

<FilesMatch "^\.">
    Deny from all
</FilesMatch>

# Block backup and source files
<FilesMatch "(\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist)|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# ======= PERFORMANCE OPTIMIZATION =======

# Cache control for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Block directory listing globally
IndexIgnore *