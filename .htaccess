RewriteEngine On

# Remove duplicate RewriteEngine and fix index.php redirect
RewriteRule ^index\.php$ / [R=301,L]

# Hide .php extensions
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# Security Headers
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Block common attacks
RewriteCond %{QUERY_STRING} (eval\(|base64_encode|javascript:|<script|document\.cookie) [NC]
RewriteRule ^ - [F,L]

# Block SQL injections
RewriteCond %{QUERY_STRING} (union.*select|insert.*into|drop.*table|update.*set) [NC]
RewriteRule ^ - [F,L]

# Block file inclusion attacks
RewriteCond %{QUERY_STRING} (\.\./|\.\.\\|\.\.%2f|\.\.%5c) [NC]
RewriteRule ^ - [F,L]

# Protect sensitive files
<Files "recaptcha.php">
    Order Allow,Deny
    Deny from all
</Files>

<FilesMatch "\.(env|log|ini|conf|sql)$">
    Deny from all
</FilesMatch>

<FilesMatch "^\.">
    Deny from all
</FilesMatch>