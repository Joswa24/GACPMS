RewriteEngine On

# Remove duplicate RewriteEngine and fix index.php redirect
RewriteRule ^index\.php$ / [R=301,L]

# Hide .php extensions
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# ======= SECURITY HEADERS & PROTECTION =======

# Enable HSTS Header
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"

# Additional Security Headers
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# ======= CRUD-FRIENDLY SECURITY RULES =======
# Only apply security rules to GET requests to avoid blocking POST/PUT/DELETE operations

# Block common attacks - GET REQUESTS ONLY
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (eval\() [NC,OR]
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (base64_encode) [NC,OR]
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (javascript:) [NC,OR]
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (<script) [NC,OR]
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (document\.cookie) [NC]
RewriteRule ^(.*)$ - [F,L]

# Block SQL injections - GET REQUESTS ONLY
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (union.*select) [NC,OR]
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (insert.*into) [NC,OR]
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (drop.*table) [NC,OR]
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (update.*set) [NC]
RewriteRule ^(.*)$ - [F,L]

# Block file inclusion attacks - GET REQUESTS ONLY
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{QUERY_STRING} (\.\./|\.\.\\|\.\.%2f|\.\.%5c) [NC]
RewriteRule ^(.*)$ - [F,L]

# Disable server signature
ServerSignature Off

# Block direct access to recaptcha config files
<Files "recaptcha.php">
    Order Allow,Deny
    Deny from all
</Files>

# Protect sensitive files
<FilesMatch "\.(env|log|ini|conf|sql)$">
    Deny from all
</FilesMatch>

<FilesMatch "^\.">
    Deny from all
</FilesMatch>

# ======= ADDITIONAL CRUD PROTECTION =======
# Ensure these don't interfere with form submissions

# Allow all HTTP methods (GET, POST, PUT, DELETE, etc.)
# No restrictions on request methods

# Disable directory listing for security
Options -Indexes